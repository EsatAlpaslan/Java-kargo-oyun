<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRoomRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainRoomFragment">

    <!-- Arka plan masa -->


    <ImageView
        android:id="@+id/masaImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Silah üretim masası"
        android:scaleType="fitXY"
        android:src="@drawable/masa" />


   <!-- Revolver Silah Parçaları -->

    <ImageView
        android:id="@+id/partBarrel"
        android:layout_width="60dp"
        android:layout_height="68dp"
        android:adjustViewBounds="true"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:scaleType="fitCenter"
        android:src="@drawable/revolver_barrel"
        android:translationX="235dp"
        android:translationY="40dp" />

    <ImageView
        android:id="@+id/partHammer"
        android:layout_width="58dp"
        android:layout_height="57dp"
        android:adjustViewBounds="true"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:scaleType="fitCenter"
        android:src="@drawable/revolver_hammer"
        android:translationX="350dp"
        android:translationY="50dp" />

    <ImageView
        android:id="@+id/partCylinder"
        android:layout_width="175dp"
        android:layout_height="141dp"
        android:adjustViewBounds="true"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:scaleType="fitCenter"
        android:src="@drawable/revolver_cylinder"
        android:translationX="450dp"
        android:translationY="36dp" />

    <ImageView
        android:id="@+id/partGrip"
        android:layout_width="132dp"
        android:layout_height="76dp"
        android:adjustViewBounds="true"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:scaleType="fitCenter"
        android:src="@drawable/revolver_grip"
        android:translationX="20dp"
        android:translationY="20dp" />

    <ImageView
        android:id="@+id/partMag"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:scaleType="fitCenter"
        android:src="@drawable/part_mag"
        android:translationX="500dp"
        android:translationY="250dp"
        android:visibility="gone"
        />



    <ImageView
        android:id="@+id/partSpring"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:adjustViewBounds="true"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:scaleType="fitCenter"
        android:src="@drawable/part_spring"
        android:translationX="65dp"
        android:translationY="20dp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/partBarrel2"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:adjustViewBounds="true"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:scaleType="fitCenter"
        android:src="@drawable/part_barrel"
        android:translationX="185dp"
        android:translationY="20dp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/partFrame"
        android:layout_width="135dp"
        android:layout_height="76dp"
        android:adjustViewBounds="true"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:scaleType="fitCenter"
        android:src="@drawable/part_frame"
        android:translationX="500dp"
        android:translationY="40dp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/partSlide"
        android:layout_width="132dp"
        android:layout_height="76dp"
        android:adjustViewBounds="true"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:scaleType="fitCenter"
        android:src="@drawable/part_slide"
        android:translationX="5dp"
        android:translationY="150dp"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/partDeagleFrame"
        android:layout_width="135dp"
        android:layout_height="76dp"
        android:scaleType="fitCenter"
        android:src="@drawable/deagle_frame"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/partDeagleSlide"
        android:layout_width="132dp"
        android:layout_height="76dp"
        android:scaleType="fitCenter"
        android:src="@drawable/deagle_slide"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/partDeagleSpring"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:scaleType="fitCenter"
        android:src="@drawable/deagle_spring"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/partDeagleBarrel"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:scaleType="fitCenter"
        android:src="@drawable/deagle_barrel"
        android:visibility="gone"
        />



    <ImageView
        android:id="@+id/partDeagleMag"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/deagle_mag"
        android:visibility="gone"
        />




    <TextView
        android:id="@+id/completionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✔ Silah başarıyla tamamlandı!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:visibility="gone"
        android:layout_gravity="center"
        android:background="#AA000000"
        android:padding="16dp"
        android:elevation="10dp"/>

    <!-- Sonraki Güne Geç Butonu -->
    <Button
        android:id="@+id/nextDayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sonraki Güne Geç"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:visibility="gone"
        android:elevation="10dp"
        android:backgroundTint="#AA000000"
        android:textColor="@android:color/white"
        />


    <!-- Gün sayısını gösteren yazı -->
        <TextView
            android:id="@+id/dayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GÜN 1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="bottom|start"
            android:layout_margin="16dp" />

    <!-- sayac -->
        <TextView
            android:id="@+id/dayTimerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kalan: 15 sn"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            />
    <!-- Sipariş Panosu Butonu -->
    <ImageButton
        android:id="@+id/orderBoardButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:layout_gravity="top|start"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_clipboard"
    android:scaleType="centerInside"
    android:contentDescription="Sipariş Panosu" />


    <!-- Sipariş Açıklama Kutusu -->
    <TextView
        android:id="@+id/orderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#AA000000"
        android:text="GÜN 1 SİPARİŞİ:\n1 adet tabanca\nTeslim süresi: 15 sn"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="16dp"
        android:visibility="gone"
        android:elevation="8dp"/>

    <ImageView
        android:id="@+id/exampleGunImage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/revolver"
        android:visibility="gone"
        android:contentDescription="Silah Görseli" />








</FrameLayout>

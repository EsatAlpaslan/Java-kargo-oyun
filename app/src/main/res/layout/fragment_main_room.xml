<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRoomRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomSelectionFragment">

    <!-- Silah üretim masası -->
    <ImageView
        android:id="@+id/masaImage"
        android:layout_width="743dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="Silah üretim masası"
        android:src="@drawable/masa" />

    <!-- Alarm lambası -->
    <ImageView
        android:id="@+id/alarmLight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:src="@drawable/alarm_lambasi"
        android:visibility="gone"
        android:contentDescription="Alarm Lambası" />

    <!-- Sol ok -->
    <ImageButton
        android:id="@+id/leftArrow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical|start"
        android:layout_marginStart="16dp"
        android:src="@drawable/ok_sola"
        android:background="@android:color/transparent"
        android:contentDescription="Sola git" />

    <!-- Sağ ok -->
    <ImageButton
        android:id="@+id/rightArrow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ok_saga"
        android:background="@android:color/transparent"
        android:contentDescription="Sağa git" />
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/room_selection_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomSelectionFragment">

    <!-- Kapı görseli -->
    <ImageView
        android:id="@+id/imgDoors"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/uc_kapi"
        android:scaleType="fitXY"
        android:contentDescription="Kapılar" />

    <!-- Görselin sol kapısıyla örtüşen tıklanabilir alan -->
    <View
        android:id="@+id/leftDoorArea"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginStart="24dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:selectableItemBackground"
        tools:ignore="MissingConstraints" />

</FrameLayout>

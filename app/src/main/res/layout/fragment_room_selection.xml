<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/room_selection_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomSelectionFragment">

    <!-- Arka plan kapı görseli -->
    <ImageView
        android:id="@+id/imgDoors"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/uc_kapi"
        android:scaleType="fitXY"
        android:contentDescription="Kapılar" />

    <!-- SOL kapı (Temizlik) -->
    <Button
        android:id="@+id/btnLeftDoor"
        android:layout_width="135dp"
        android:layout_height="215dp"
        android:layout_gravity="start|top"
        android:layout_marginStart="30dp"
        android:layout_marginTop="150dp"
        android:background="@android:color/transparent"
        android:contentDescription="Sol Kapı" />

    <!-- ORTA kapı (Müşteri Hizmetleri) -->
    <Button
        android:id="@+id/btnMiddleDoor"
        android:layout_width="170dp"
        android:layout_height="235dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="130dp"
        android:layout_marginStart="-30dp"
        android:background="@android:color/transparent"
        android:contentDescription="Orta Kapı" />


    <!-- SAĞ kapı (Kargo/Dağıtım) -->
    <Button
        android:id="@+id/btnRightDoor"
        android:layout_width="150dp"
        android:layout_height="230dp"
        android:layout_gravity="end|top"
        android:layout_marginEnd="62dp"
        android:layout_marginTop="140dp"
        android:background="@android:color/transparent"
        android:contentDescription="Sağ Kapı" />

</FrameLayout>
